{
  "name": "jobspy-js",
  "version": "1.1.0",
  "description": "Job scraper for LinkedIn, Indeed, Glassdoor, Google, ZipRecruiter, Bayt, Naukri & BDJobs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js"
    }
  },
  "bin": {
    "jobspy": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc",
    "cli": "vite-node src/cli/index.ts",
    "mcp": "vite-node src/mcp/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "npm version minor --no-git-tag-version && pnpm build && npm publish"
  },
  "keywords": [
    "jobs-scraper",
    "linkedin",
    "indeed",
    "glassdoor",
    "ziprecruiter",
    "google-jobs",
    "bayt",
    "naukri",
    "bdjobs",
    "job-search",
    "web-scraping"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cheerio": "^1.0.0",
    "commander": "^13.1.0",
    "playwright": "^1.58.2",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "turndown": "^7.2.0",
    "wreq-js": "^2.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@types/turndown": "^5.0.5",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vite-node": "^5.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
